    @model BookingCompositeViewModel
    <!DOCTYPE html>
    <html>
    <head>
        <title>Booking Confirmation</title>
        <style>

        </style>
    </head>
    <body>
        <div class="success-container">
            <div class="checkmark-circle"></div>

            <div class="confirmation-heading">Payment Successful!</div>
            <div class="confirmation-subtitle">
                We’ve received your booking and payment.
            </div>

            <div class="booking-details">
                <p><strong>Booking ID:</strong> @Model.BookingViewModel.Id</p>
                <p><strong>Apartment:</strong> @Model.BookingViewModel.ApartmentViewModel?.Name</p>
                <p><strong>Check-in Date:</strong> @Model.BookingViewModel.CheckInDate.ToString("MMM dd, yyyy")</p>
                <p><strong>Check-out Date:</strong> @Model.BookingViewModel.CheckOutDate.ToString("MMM dd, yyyy")</p>
                <p><strong>Total Paid:</strong> @Model.BookingViewModel.TotalPrice.ToString("C")</p>
                <div class="row g-2">
                    @if (Model.BookingViewModel.GuestProfiles == null || !Model.BookingViewModel.GuestProfiles.Any())
                    {
                        <p>No guests found.</p>
                    }
                    else
                    {
                        @foreach (var guest in Model.BookingViewModel.GuestProfiles)
                        {
                            <div class="col-6">
                                <p><strong>Guest:</strong> @guest.FirstName</p> 
                            </div>
                        }
                    }
                <a class="btn btn-primary w-100" asp-controller="Home" asp-action="Index">Home</a>
                </div>
            </div>
        </div>
    </body>
    </html>
