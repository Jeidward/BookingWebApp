@model DashboardApartmentManagementViewModel
<body>
    <div class="container mt-4">
        <!-- Dashboard Summary -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Total Apartments</h5>
                        <p class="card-text display-4">@Model.ApartmentTotal</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Occupied</h5>
                        <p class="card-text display-4">@Model.ApartmentCurrentlyOccupied</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Available</h5>
                        <p class="card-text display-4">@Model.ApartmentAvailable</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Add New Button -->
        <div class="row mb-4">
            <div class="col-md-6">
                <form method="get" action="/Apartment/Index" class="d-flex">
                    <input type="text" name="searchString" class="form-control me-2" placeholder="Search apartments..." />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>
            <div class="col-md-6 text-end">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addApartmentModal">
                    <i class="fas fa-plus me-1"></i> Add New Apartment
                </button>
            </div>
        </div>

      
            <!-- Apartments List -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">Apartment Inventory</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
	                        <thead class="table-light">
	                        <tr>
		                        <th><a href="#">Apt #</a></th>
		                        <th><a href="#">Name</a></th>
		                        <th><a href="#">Bedrooms</a></th>
		                        <th><a href="#">Bathrooms</a></th>
		                        <th><a href="#">Price per night</a></th>
		                        <th><a href="#">Address</a></th>
		                        <th><a href="#">Status</a></th>
		                        <th>Actions</th>
	                        </tr>
	                        </thead>
	                        @foreach (var apartment in Model.ApartmentViewModels)
	                        {
		                        <tbody>
		                        <tr>
			                        <td>@apartment.Id</td>
			                        <td>@apartment.Name</td>
			                        <td>@apartment.Bedrooms</td>
			                        <td>@apartment.Bathrooms</td>
			                        <td>@apartment.PricePerNight</td>
			                        <td>@apartment.Adress</td>

			                        <!-- status cell -->
			                        <td>
				                        @if (apartment.IsOccupied)
				                        {
					                        <span class="badge bg-success">Occupied</span>
				                        }
				                        else
				                        {
					                        <span class="badge bg-info">Available</span>
				                        }
			                        </td>

			                        <!-- actions / note cell -->
			                        <td>
				                        @if (apartment.IsOccupied)
				                        {
					                        <span>cannot be edited</span>
				                        }
				                        else
				                        {
					                        <div class="btn-group btn-group-sm">
						                        <a href="#" class="btn btn-outline-primary">
							                        <i class="fas fa-eye"></i>
						                        </a>

						                        <a class="btn btn-outline-secondary"
						                           data-bs-toggle="modal"
						                           asp-route-id="@apartment.Id"
						                           data-bs-target="#editApartmentModal">
							                        <i class="fas fa-edit"></i>
						                        </a>

						                        <form method="post"
						                              asp-controller="Dashboard"
						                              asp-action="DeleteApartment"
						                              onsubmit="return confirm('Are you sure you want to delete this apartment?');"
						                              style="display:inline;">
							                        @Html.Hidden("Id", apartment.Id)
							                        <button type="submit" class="btn btn-outline-danger">
								                        <i class="fas fa-trash"></i>
							                        </button>
						                        </form>
					                        </div>
				                        }
			                        </td>
		                        </tr>
		                        </tbody>

	                        }
                        </table>
                    </div>
                </div>
            </div>
        
        <div class="card-footer bg-white">
	        <nav>
		        <ul class="pagination justify-content-center mb-0">
			        <li class="page-item disabled">
				        <span class="page-link">Previous</span>
			        </li>
			        <li class="page-item active">
				        <a class="page-link" href="#">1</a>
			        </li>
			        <li class="page-item"><a class="page-link" href="#">2</a></li>
			        <li class="page-item"><a class="page-link" href="#">3</a></li>
			        <li class="page-item"><a class="page-link" href="#">Next</a></li>
		        </ul>
	        </nav>
        </div>

    </div> <!-- /container -->

    <!-- Add Apartment Modal -->
    <div class="modal fade" id="addApartmentModal" tabindex="-1" aria-labelledby="addApartmentModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
			<form method="post" asp-controller="Dashboard" asp-action="AddApartment" enctype="multipart/form-data">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addApartmentModalLabel">Add New Apartment</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="ApartmentNumber" name="Id" placeholder="Apartment Number" required />
                                    <label for="ApartmentNumber">Apartment Number</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Name" required />
                                    <label for="Name">Name</label>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="Bedrooms" name="Bedrooms" placeholder="Bedrooms" required />
                                    <label for="Bedrooms">Bedrooms</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="Bathrooms" name="Bathrooms" step="0.5" placeholder="Bathrooms" required />
                                    <label for="Bathrooms">Bathrooms</label>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="number" class="form-control" id="CostPerNight" name="CostPerNight" step="0.01" placeholder="Cost per night" required />
                                    <label for="CostPerNight">Per night cost ($)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="Adress" name="Adress" placeholder="Address" required />
                                    <label for="Adress">Address</label>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <textarea class="form-control" id="Description" name="Description" placeholder="Description" style="height: 100px"></textarea>
                                    <label for="Description">Description</label>
                                </div>
                            </div>
                            <label class="btn btn-primary">
                                <i class="bi bi-upload me-1"></i> Upload images
                                <input type="file" name="Gallery" accept="image/*" multiple hidden />
                            </label>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <select class="form-select" id="AmenityIds" name="AmenityIds" multiple aria-label="Amenities">
                                        <option value="1">Air Conditioning</option>
                                        <option value="2">In-unit Laundry</option>
                                        <option value="3">Balcony</option>
                                        <option value="4">Fitness Center Access</option>
                                        <option value="5">Pool Access</option>
                                        <option value="6">Pet Friendly</option>
                                        <option value="7">Wheelchair Accessible</option>
                                    </select>
                                    <label for="AmenityIds">Amenities</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Add Apartment</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
	

    <div class="modal fade" id="editApartmentModal"
         tabindex="-1" aria-labelledby="editApartmentModalLabel" aria-hidden="true">
	    <div class="modal-dialog modal-lg">
		    <form asp-action="EditApartment" asp-controller="Dashboard" method="post"
		          enctype="multipart/form-data">
			    <div class="modal-content">
				    <div class="modal-header">
					    <h5 class="modal-title" id="editApartmentModalLabel">
						    Edit Apartment #@Model.ApartmentViewModel.Id
					    </h5>
					    <button type="button" class="btn-close" data-bs-dismiss="modal"
					            aria-label="Close"></button>
				    </div>

				    <div class="modal-body">
					    @* Hidden key so the POST knows which row to update *@
					    <input type="hidden" asp-for="ApartmentViewModel.Id" />

					    <div class="row mb-3">
						    <div class="col-md-6">
							    <div class="form-floating mb-3">
								    <input asp-for="ApartmentViewModel.Name" class="form-control" required />
								    <label asp-for="ApartmentViewModel.Name"></label>
							    </div>
						    </div>

						    <div class="col-md-3">
							    <div class="form-floating mb-3">
								    <input asp-for="ApartmentViewModel.Bedrooms" class="form-control" type="number" required />
								    <label asp-for="ApartmentViewModel.Bedrooms"></label>
							    </div>
						    </div>

						    <div class="col-md-3">
							    <div class="form-floating mb-3">
								    <input asp-for="ApartmentViewModel.Bathrooms" class="form-control" type="number" step="0.5" required />
								    <label asp-for="ApartmentViewModel.Bathrooms"></label>
							    </div>
						    </div>
					    </div>

					    <div class="row mb-3">
						    <div class="col-md-4">
							    <div class="form-floating mb-3">
								    <input asp-for="ApartmentViewModel.PricePerNight" class="form-control" type="number" step="0.01" required />
								    <label asp-for="ApartmentViewModel.PricePerNight">Per-night cost ($)</label>
							    </div>
						    </div>

						    <div class="col-md-8">
							    <div class="form-floating mb-3">
								    <input asp-for="ApartmentViewModel.Adress" class="form-control" required />
								    <label asp-for="ApartmentViewModel.Adress"></label>
							    </div>
						    </div>
					    </div>

					    <div class="form-floating mb-3">
						    <textarea asp-for="ApartmentViewModel.Description" class="form-control" style="height:100px"></textarea>
						    <label asp-for="ApartmentViewModel.Description"></label>
					    </div>

					    @* existing gallery preview *@
					    <div class="mb-3">
						    <label class="form-label">Current images</label>
						    <div class="d-flex flex-wrap gap-2">
								@foreach (var img in Model.ApartmentViewModel.Gallery ?? Enumerable.Empty<string>())
							    {
								    <div class="position-relative">
									    <img src="~/IMG/@img" class="rounded shadow-sm" style="width:100px;height:75px;object-fit:cover" />
									    @* optional remove checkbox *@
									    <input type="checkbox" name="RemoveGallery" value="@img"
									           class="form-check-input position-absolute top-0 start-0">
								    </div>
							    }
						    </div>
					    </div>

					    <label class="btn btn-outline-primary mb-3">
						    <i class="bi bi-upload me-1"></i> Add more images
						    <input type="file" name="NewGallery" accept="image/*" multiple hidden />
					    </label>

					    <div class="form-floating">
						    @* <select asp-for="AmenityIds" asp-items="Model.AllAmenities" *@
						    @*         class="form-select" multiple></select> *@
						    @* <label asp-for="AmenityIds"></label> *@
					    </div>
				    </div>

				    <div class="modal-footer">
					    <button type="button" class="btn btn-secondary"
					            data-bs-dismiss="modal">Cancel</button>
					    <button type="submit" class="btn btn-primary">Save changes</button>
				    </div>
			    </div>
		    </form>
	    </div>
    </div>
</body>

